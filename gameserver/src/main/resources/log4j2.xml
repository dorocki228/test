                                 filePattern="logs/$${date:yyyy-MM}/gameserver-%d{MM-dd-yyyy}-%i.log.gz"
                                 immediateFlush="false">
            <PatternLayout>
                <Pattern>%d %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
