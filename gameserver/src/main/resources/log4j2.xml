<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="GameServer" shutdownHook="disable">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5level %logger{36} - %msg%n"/>
        </Console>

