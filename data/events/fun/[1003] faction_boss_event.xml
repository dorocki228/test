<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE list SYSTEM "events.dtd">
<list>
	<event id="1003" name="Faction Boss Event" impl="FactionBoss">
		<parameter name="pattern" value="20 13,22 * * *"/>
		<on_init>
			<init name="anakim_zone"/>
			<init name="lilith_zone"/>
		</on_init>
		<on_start>
			<if name="anakim">
				<spawn name="anakim"/>
				<active name="anakim_zone"/>
			</if>
			<if name="lilith">
				<spawn name="lilith"/>
				<active name="lilith_zone"/>
			</if>
		</on_start>
		<on_stop>
			<despawn name="anakim"/>
			<despawn name="lilith"/>
			<deactive name="anakim_zone"/>
			<deactive name="lilith_zone"/>
		</on_stop>
		<on_time>
			<on time="0">
				<start name="event"/>
			</on>
			<on time="3600">
				<stop name="event"/>
			</on>
		</on_time>
		<objects name="anakim">
			<spawn_ex name="faction_boss_event_anakim"/>
		</objects>
		<objects name="lilith">
			<spawn_ex name="faction_boss_event_lilith"/>
		</objects>
		<objects name="anakim_zone">
			<zone name="faction_boss_anakim"/>
		</objects>
		<objects name="lilith_zone">
			<zone name="faction_boss_lilith"/>
		</objects>
	</event>
</list>
