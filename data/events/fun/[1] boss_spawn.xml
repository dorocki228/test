<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE list SYSTEM "events.dtd">
<list>
	<event id="1" name="Epic Boss Spawn" impl="BossSpawn">
		<parameter name="pattern" value="15 21 * * *"/>
		<!-- boss id; boss zone; boss spawn coords; reward -->
		<parameter name="bosses_monday" value="29014;[orfen_p];42952 16744 -4392;77411,1"/>
		<parameter name="bosses_tuesday" value="29006;[core_p];17736 108920 -6472;77411,1"/>
		<parameter name="bosses_wednesday" value="29001;[antqueen_p];-21560 182184 -5720;77411,1"/>
		<parameter name="bosses_thursday" value="29066;[antharas_p];181224 114840 -7672;77411,1"/>
		<parameter name="bosses_friday" value="29014;[orfen_p];42952 16744 -4392;77411,1"/>
		<parameter name="bosses_saturday" value="29020;[baium_p];114712 16120 10080;77411,1"/>
		<parameter name="bosses_sunday" value="29001;[antqueen_p];-21560 182184 -5720;77411,1"/>

		<on_start>
			<announce val="0"/>
			<ifnot name="teleporter_spawned">
				<spawn name="teleporter"/>
			</ifnot>
			<spawn name="boss"/>
		</on_start>

		<on_stop>
			<despawn name="boss" />
			<if name="teleporter_spawned">
				<despawn name="teleporter" />
			</if>
		</on_stop>

		<on_time>
			<on time="-900">
				<announce val="-900" />
			</on>
			<on time="-600">
				<announce val="-600" />
			</on>
			<on time="-300">
				<announce val="-300" />
                <ifnot name="teleporter_spawned">
                    <spawn name="teleporter" />
                </ifnot>
			</on>
			<on time="0">
				<start name="event" />
			</on>
			<on time="3600">
				<announce val="3600" />
				<stop name="event" />
			</on>
		</on_time>

		<objects name="teleporter">
			<spawn_ex name="boss_spawn_teleporter" />
		</objects>

	</event>
</list>